{% extends 'layout.html' %}

{% block styles %}
<style>
    .attendance-stats-card .card-body {
        min-height: 300px;
    }
    .document-status-card .list-group-item {
        border-radius: 6px;
        margin-bottom: 5px;
    }
    .dashboard-card {
        transition: all 0.3s;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }
    .stat-box {
        border-radius: 8px;
        transition: all 0.3s;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }
    .stat-box:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
    }
    .chart-container {
        position: relative;
        height: 200px;
        width: 100%;
        margin-top: 15px;
    }
    /* تعليمات خاصة لعدم تأثر عناصر التاريخ في جدول الحضور */
    .attendance-date span {
        display: inline-block !important;
        visibility: visible !important;
        opacity: 1 !important;
    }
</style>

<style>
    /* ... أي ستايلات أخرى ... */
    .department-pills-container {
        display: flex; flex-wrap: wrap; gap: 0.5rem;
    }
    .department-pill {
        display: inline-flex; align-items: center; padding: 0.5em 0.9em;
        font-size: 0.9rem; cursor: pointer; border-radius: 50rem;
        transition: all 0.2s ease-in-out;
        /* ستايل السمة الداكنة الافتراضي */
        background-color: #495057; color: #ced4da; border: 1px solid #495057;
    }
    .department-pill .fa-check-circle { display: none; }
    .department-pill.active {
        background-color: #0d6efd; color: white; border-color: #0a58ca; font-weight: 500;
    }
    .department-pill.active .fa-check-circle { display: inline-block; }
    .department-pill:not(.active):hover { background-color: #6c757d; }
</style>

{% endblock %}


{% block scripts %}
{{ super() }}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // بيانات الحضور للرسم البياني
        {% set present_count = attendances|selectattr('status', 'eq', 'present')|list|length %}
        {% set absent_count = attendances|selectattr('status', 'eq', 'absent')|list|length %}
        {% set leave_count = attendances|selectattr('status', 'eq', 'leave')|list|length %}
        {% set sick_count = attendances|selectattr('status', 'eq', 'sick')|list|length %}
        
        // رسم بياني دائري للحضور
        const attendanceCtx = document.getElementById('attendanceChart');
        if (attendanceCtx) {
            const attendanceChart = new Chart(attendanceCtx, {
                type: 'doughnut',
                data: {
                    labels: ['حاضر', 'غائب', 'إجازة', 'مرضي'],
                    datasets: [{
                        data: [{{ present_count }}, {{ absent_count }}, {{ leave_count }}, {{ sick_count }}],
                        backgroundColor: [
                            '#28a745', // أخضر (حاضر)
                            '#dc3545', // أحمر (غائب)
                            '#ffc107', // أصفر (إجازة)
                            '#17a2b8'  // أزرق (مرضي)
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            rtl: true,
                            labels: {
                                font: {
                                    family: 'Cairo, sans-serif'
                                }
                            }
                        },
                        tooltip: {
                            bodyFont: {
                                family: 'Cairo, sans-serif'
                            },
                            titleFont: {
                                family: 'Cairo, sans-serif'
                            }
                        }
                    }
                }
            });
        }

        // تطبيق تأثيرات حركية على بطاقات لوحة المعلومات
        const dashboardCards = document.querySelectorAll('.dashboard-card');
        dashboardCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.classList.add('shadow-lg');
            });
            card.addEventListener('mouseleave', function() {
                this.classList.remove('shadow-lg');
            });
        });
        
        // زر عرض كل الأيام
        const showAllDaysBtn = document.getElementById('showAllDaysBtn');
        if (showAllDaysBtn) {
            let allDaysShown = false;
            
            showAllDaysBtn.addEventListener('click', function() {
                const extraRows = document.querySelectorAll('.extra-attendance-row');
                if (!allDaysShown) {
                    // عرض جميع السجلات
                    extraRows.forEach(row => {
                        row.classList.remove('d-none');
                    });
                    this.innerHTML = '<i class="fas fa-compress-alt me-1"></i>عرض أقل';
                    allDaysShown = true;
                } else {
                    // إخفاء السجلات الإضافية
                    extraRows.forEach(row => {
                        row.classList.add('d-none');
                    });
                    this.innerHTML = '<i class="fas fa-calendar-alt me-1"></i>عرض كل الأيام';
                    allDaysShown = false;
                }
            });
        }
    });
</script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log("DOM is ready. Initializing employee edit scripts...");

    // --- بداية منطق شارات الأقسام التفاعلية ---
    const departmentPills = document.querySelectorAll('.department-pill');
    
    // التحقق مما إذا تم العثور على أي شارات
    console.log(`Found ${departmentPills.length} department pills.`);

    departmentPills.forEach(pill => {
        pill.addEventListener('click', function() {
            // 1. تبديل المظهر البصري للشارة
            this.classList.toggle('active');

            // 2. العثور على معرف مربع الاختيار المرتبط
            const targetCheckboxId = this.dataset.targetId;
            const targetCheckbox = document.getElementById(targetCheckboxId);

            if (targetCheckbox) {
                // 3. عكس حالة مربع الاختيار المخفي
                targetCheckbox.checked = !targetCheckbox.checked;
                console.log(`Checkbox #${targetCheckboxId} is now ${targetCheckbox.checked ? 'checked' : 'unchecked'}`);
            } else {
                console.error(`Could not find checkbox with ID: ${targetCheckboxId}`);
            }
        });
    });
    // --- نهاية منطق شارات الأقسام التفاعلية ---


    // --- كود إضافي آخر (مثل إظهار/إخفاء كلمة المرور) يمكن أن يكون هنا ---
    const togglePassword = document.getElementById('togglePassword');
    if (togglePassword) {
        // ... (منطق زر كلمة المرور)
    }

});
</script>

